{
  "compilerOptions": {
    "outDir": "./dist",  
    "rootDir": "./src",  
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["/src/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/custom.d.ts"]
}
